<h2>{{recipe.title}}</h2>
<h3>Ingredients:</h3>
<p>{{recipe.ingredients}}</p>
<h3>Instructions:</h3>
<p>{{recipe.instructions}}</p>

<hr>

<p class="dates">Created on {{format_date recipe.createdAt}} at {{format_time recipe.createdAt}}</p>
<p class="dates">Last updated on {{format_date recipe.updatedAt}} at {{format_time recipe.updatedAt}}</p>
<button class="btn btn-warning" id="button-edit">Edit</button>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Delete Recipe
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete the recipe, {{recipe.title}}?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep recipe</button>
        <button type="button" class="btn btn-primary" id="delete-recipe-button">Delete</button>
      </div>
    </div>
  </div>
</div>


<script src="/js/deleteRecipe.js"></script>

